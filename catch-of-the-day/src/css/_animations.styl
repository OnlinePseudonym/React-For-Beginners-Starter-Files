/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 0.5s
  transform scale(0)
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform scale(1)
    max-height 60px
    padding 2rem 0 !important

.order-leave
  transition all 0.5s
  transform scale(1)
  max-height 60px
  padding 2rem 0 !important
  &.order-leave-active
    transform scale(0)
    max-height 0
    padding 0 !important

.count-enter
  transition all .2s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-leave
  transition all .2s
  position absolute
  top: 0
  left: 0
  transform translateY(0)
  &.count-leave-active
    transform translateY(-100%)